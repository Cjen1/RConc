# cloned from https://github.com/mininet/mininet/pull/968
FROM debian:stretch-slim

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update -yq && apt-get install -yq \
    arping \
    git \
    hping3 \
    iputils-ping \
    net-tools \
    sudo \
    traceroute

RUN apt update -yq && apt install -yq \
    build-essential \
    zlib1g-dev \
    libncurses5-dev \
    libgdbm-dev \
    libnss3-dev \
    libssl-dev \
    libreadline-dev \
    libffi-dev \
    libsqlite3-dev \
    wget \
    libbz2-dev

RUN mkdir /python && \
    cd /python && \
    wget https://www.python.org/ftp/python/3.10.2/Python-3.10.2.tgz && \
    tar -xf Python-3.10.2.tgz && \
    cd Python-3.10.2 && \
    ./configure --enable-optimizations && \
    make -j 4 && \
    sudo make install

ARG INSTALL_FLAGS="-fnv"
COPY ./vendor/mininet /root/mininet
RUN sh -c "PYTHON=python /root/mininet/util/install.sh ${INSTALL_FLAGS}"

RUN apt-get clean

COPY ./scripts/ENTRYPOINT.sh /root/mininet/util/ENTRYPOINT.sh
RUN chmod +x /root/mininet/util/ENTRYPOINT.sh

ENTRYPOINT [ "/root/mininet/util/ENTRYPOINT.sh", "mn"]
