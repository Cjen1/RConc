#--------------------------------------------------
.PHONY:pip-deps
pip-deps: install-deps
	python3 -m pip install virtualenv
	sudo apt install python3-venv -y

.PHONY:pip
pip: pip-deps
	( \
		pip install \
			protobuf \
			pyzmq \
			pathlib \
			tqdm \
			numpy \
			cgroups \
			pandas \
	)

#--------------------------------------------------
.PHONY:install-deps
install-deps:
	sudo apt install -y \
		python3 \
		python \
		python3-numpy \
		python-numpy \
		python3-pip \
		python-pip \
		autoconf \
		automake \
		libtool \
		curl \
		make \
		g++ \
		unzip \
		libzmq3-dev \
		tmux \
		screen \
		psmisc \
		iptables

	curl -L "https://github.com/protocolbuffers/protobuf/releases/download/v3.9.1/protoc-3.9.1-linux-x86_64.zip" > /tmp/pb.zip
	unzip /tmp/pb.zip -d /tmp/pb
	sudo cp /tmp/pb/bin/protoc /usr/bin
	rm -r /tmp/pb
